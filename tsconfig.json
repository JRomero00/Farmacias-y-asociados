{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "module": "commonjs",               
    "moduleResolution": "node",       
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",               
    "incremental": true,
    "types": ["jest", "@testing-library/jest-dom", "node"], 
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/pages/api/frecuentes.js",
    "jest.setup.ts"                    // Incluyo setup de Jest
  ],
  "exclude": ["node_modules"]
}
